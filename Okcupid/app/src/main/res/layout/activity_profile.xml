<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">
<RelativeLayout
    android:id="@+id/rl1"
    android:background="@color/blackgray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/firstcard"
        style="@style/first_cardview1">
        <androidx.cardview.widget.CardView
            style="@style/second_cardview1">
            <ImageView
                style="@style/Image_view2"
                android:src="@drawable/girlone"
                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/ic_telegram_1"
        />
    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstcard"
        android:text="Sachin"
        android:id="@+id/tv1"
        android:fontFamily="@font/basic"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:layout_below="@+id/tv1"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/basic"
        android:drawableStart="@drawable/ic_twotone_location_on_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstcard"
        android:text="Patna"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/btnPrefrences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/blackgray"

            />
        <Button
            android:id="@+id/btnSettings"
            android:textColor="@color/white"
            android:background="@color/blackgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textAllCaps="false"
            android:layout_weight="1"
            />

    </LinearLayout>
    <ImageView
        android:layout_below="@id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gj1"
        android:scaleType="fitXY"
        />
</RelativeLayout>