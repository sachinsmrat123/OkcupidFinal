<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="20dp"
    android:background="@color/gray"
    android:layout_marginEnd="20dp"
    android:layout_height="match_parent"
    tools:context=".email">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_marginStart="@dimen/dp_5"
        android:padding="3dp"
        android:onClick="previous"
        android:background="@drawable/ic_keyboard_left_arrow_button"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/about_You"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="About you"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_You"
        android:layout_marginTop="15dp"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"

        />

    <TextView
        android:id="@+id/whoareyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:text="Who are you?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <TextView

        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whoareyou"
        android:layout_marginTop="150dp"
        android:text="Email"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/etemailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:paddingTop="10dp"
        android:background="@drawable/rectangle1"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:hint="your.email@exmple.com"
        />
    <Button
        android:id="@+id/btnnext"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="20dp"
        android:background="@drawable/rectangle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />








</RelativeLayout>