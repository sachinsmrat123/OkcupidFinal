<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_height="match_parent"
    tools:context=".Iamlookingfor">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="17dp"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_keyboard_left_arrow_button" />

    <TextView
        android:id="@+id/ideal_person2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Ideal Person"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/iamlookingfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ideal_person2"
        android:layout_marginTop="15dp"
        android:text="I am looking for..."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iamlookingfor"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="@drawable/rectangle_email"
            android:button="@null"
            android:drawableRight="@drawable/checkbox"
            android:padding="12dp"
            android:text="Men"
            android:textSize="20sp" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lookingfor"
            android:background="@drawable/rectangle_email"
            android:button="@null"
            android:drawableRight="@drawable/checkbox"
            android:padding="12dp"
            android:text="Women"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvmore_options"
            android:layout_width="match_parent"
            android:textColor="#00008b"
            android:textStyle="bold"
            android:textSize="@dimen/sp_22"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            android:text="More Option"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnnext22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#00008b"
        android:padding="20dp"
        android:text="NEXT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />






</RelativeLayout>