<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".likesLayout">

    <TextView
        android:id="@+id/tvlikes34"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@drawable/rectangleblack"
        android:padding="10dp"
        android:text="Likes"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22" />

    <TextView
        android:id="@+id/btnlikeshomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/pinkrectangle"
        android:drawableStart="@drawable/ic_flash__1_"
        android:text="BOOST"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_5"
            android:text="LIKES YOU"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_5"
            android:text="INTROS"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_5"
            android:text="YOU LIKE"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_below="@id/tvlikes34"
        android:background="@color/darkpink" />

    <TextView
        android:id="@+id/tvnotlikes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlikes34"
        android:layout_marginTop="20dp"
        android:text="You don't have any likes yet."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvgetyourfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnotlikes"
        android:layout_marginTop="7dp"
        android:text="Get your first match with the"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvfeaturesbelow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvgetyourfirst"
        android:layout_marginTop="7dp"
        android:text="features below!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_margin="@dimen/dp_20"
        android:elevation="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvfeaturesbelow">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:src="@drawable/ic_man"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:text="Boost yourself"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="Get a full day's worth of attentions in"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="one 30-minute Boost"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnjoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle"
                android:text="GET BOOST"
                android:textColor="#FFFFFf"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/rl2"
        android:layout_alignParentBottom="true"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/firstcardbutton"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btndoubletake"
                    style="@style/Image_view"
                    android:background="@drawable/doubletake"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_toRightOf="@+id/firstcardbutton"
            android:id="@+id/secondcardbutton"
            android:layout_marginStart="40dp"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btnlikes"
                    style="@style/Image_view"
                    android:background="@drawable/likes"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="40dp"
            android:layout_toLeftOf="@+id/fourthcardbutton"
            android:id="@+id/thirdcardbutton"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btnmessages"
                    style="@style/Image_view"
                    android:background="@drawable/message"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/fourthcardbutton"
            android:layout_alignParentEnd="true"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btnprofile"
                    style="@style/Image_view"
                    android:background="@drawable/profile"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            style="@style/text_view"
            android:layout_marginStart="10sp"
            android:text="Doubletake"
            android:textColor="@color/white"
            android:layout_below="@+id/firstcardbutton"
            />

        <TextView
            style="@style/text_view"
            android:layout_below="@+id/secondcardbutton"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/firstcardbutton"
            android:text="Likes"
            android:textColor="@color/white" />

        <TextView
            style="@style/text_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_below="@+id/firstcardbutton"
            />

        <TextView
            style="@style/text_view"
            android:layout_below="@+id/secondcardbutton"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="46dp"
            android:layout_toLeftOf="@+id/fourthcardbutton"
            android:text="Messages"
            android:textColor="@color/white" />
    </RelativeLayout>



</RelativeLayout>