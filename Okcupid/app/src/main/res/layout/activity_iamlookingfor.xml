<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".Iamlookingfor">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="17dp"
        android:onClick="previous"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_keyboard_left_arrow_button" />

    <TextView
        android:id="@+id/ideal_person2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Ideal Person"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/iamlookingfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ideal_person2"
        android:layout_marginTop="15dp"
        android:text="I am looking for..."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tvCardView"
        android:layout_width="@dimen/dp_350"
        android:layout_height="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="@dimen/dp_15"
                android:drawableRight="@drawable/checkbox"
                android:text="@string/woman"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="@dimen/dp_15"
                android:drawableRight="@drawable/checkbox"
                android:text="@string/man"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:onClick="MoreOptions"
        android:id="@+id/tvMore"
        android:layout_below="@id/tvCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:text="@string/more_options"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnnext22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#00008b"
        android:padding="20dp"
        android:text="NEXT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />






</RelativeLayout>