<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".messages">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#262521"
    android:text="Messages"
    android:textColor="#FFFFFF"
    android:fontFamily="@font/basic"
    android:padding="@dimen/dp_20"
    android:textStyle="bold"
    android:textSize="@dimen/sp_20"
    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/rectanglemessagesblue"
                android:textAllCaps="false"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_40"
                android:textColor="@color/white"
                android:text="All"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/rectanglemeassages"
            android:textAllCaps="false"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_25"
            android:textColor="@color/blackgray"
            android:text="Your turn"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/rectanglemeassages"
            android:textAllCaps="false"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_20"
            android:textColor="@color/blackgray"
            android:text="New matches"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/firstcard"
        style="@style/first_cardview">
        <androidx.cardview.widget.CardView
            style="@style/second_cardview">
            <ImageView
                style="@style/Image_view"
                android:src="@drawable/girlone"

                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_toRightOf="@+id/firstcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laurelin"
            android:id="@+id/tv1"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:layout_marginStart="@dimen/dp_20"
            android:layout_below="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi i,m laurelin here "
            android:layout_toRightOf="@+id/firstcard"
            android:layout_marginTop="@dimen/dp_5"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/secondcard"
                style="@style/first_cardview">
                <androidx.cardview.widget.CardView
                    style="@style/second_cardview">
                    <ImageView
                        style="@style/Image_view"
                        android:src="@drawable/girltwo"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_toRightOf="@+id/secondcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stecy jacks"
                android:id="@+id/tv2"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_marginStart="@dimen/dp_20"
                android:layout_below="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi i,m Stecy here how's was your day today"
                android:layout_toRightOf="@+id/secondcard"
                android:layout_marginTop="@dimen/dp_5"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/thirdcard"
                style="@style/first_cardview">
                <androidx.cardview.widget.CardView
                    style="@style/second_cardview">
                    <ImageView
                        style="@style/Image_view"
                        android:src="@drawable/girlthree"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_toRightOf="@+id/thirdcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reshma"
                android:id="@+id/tv3"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_marginStart="@dimen/dp_20"
                android:layout_below="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi i,m Reshma here , what's going on"
                android:layout_toRightOf="@+id/thirdcard"
                android:layout_marginTop="@dimen/dp_5"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/fourthcard"
                style="@style/first_cardview">
                <androidx.cardview.widget.CardView
                    style="@style/second_cardview">
                    <ImageView
                        style="@style/Image_view"
                        android:src="@drawable/girlfour"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_toRightOf="@+id/fourthcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anjali"
                android:id="@+id/tv4"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_marginStart="@dimen/dp_20"
                android:layout_below="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi i,m Anjali here , would yoi like some hangout"
                android:layout_toRightOf="@+id/fourthcard"
                android:layout_marginTop="@dimen/dp_5"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>