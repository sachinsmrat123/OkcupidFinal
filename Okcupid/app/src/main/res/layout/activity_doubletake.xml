<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doubletake">
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:id="@+id/lldoubletake"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/blackgray"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgbtndoubletake"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_weight="999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommended just for you"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"
            android:padding="@dimen/dp_20"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/lldoubletake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rldoubletake"
        >
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/Image_view1"
                android:src="@drawable/girlone"/>
            <ImageView
                style="@style/Image_view1"
                android:src="@drawable/girltwo"/>
            <ImageView
                style="@style/Image_view1"
                android:src="@drawable/girlthree"/>
            <ImageView
                style="@style/Image_view1"
                android:src="@drawable/girlfour"/>
            <ImageView
                style="@style/Image_view1"
                android:src="@drawable/girlfive"/>
            <ImageView
                style="@style/Image_view1"
                android:src="@drawable/girlsix"/>
        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/rldoubletake"
        android:layout_alignParentBottom="true"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/firstcardbutton"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btndoubletake"
                    style="@style/Image_view"
                    android:background="@drawable/doubletake"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_toRightOf="@+id/firstcardbutton"
            android:id="@+id/secondcardbutton"
            android:layout_marginStart="40dp"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btnlikes"
                    style="@style/Image_view"
                    android:background="@drawable/likes"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="40dp"
            android:layout_toLeftOf="@+id/fourthcardbutton"
            android:id="@+id/thirdcardbutton"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btnmessages"
                    style="@style/Image_view"
                    android:background="@drawable/message"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/fourthcardbutton"
            android:layout_alignParentEnd="true"
            style="@style/first_cardview">
            <androidx.cardview.widget.CardView
                style="@style/second_cardview">
                <ImageView
                    android:id="@+id/btnprofile"
                    style="@style/Image_view"
                    android:background="@drawable/profile"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            style="@style/text_view"
            android:layout_marginStart="10sp"
            android:text="Doubletake"
            android:textColor="@color/white"
            android:layout_below="@+id/firstcardbutton"
            />

        <TextView
            style="@style/text_view"
            android:layout_below="@+id/secondcardbutton"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/firstcardbutton"
            android:text="Likes"
            android:textColor="@color/white" />

        <TextView
            style="@style/text_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_below="@+id/firstcardbutton"
            />

        <TextView
            style="@style/text_view"
            android:layout_below="@+id/secondcardbutton"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="46dp"
            android:layout_toLeftOf="@+id/fourthcardbutton"
            android:text="Messages"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>